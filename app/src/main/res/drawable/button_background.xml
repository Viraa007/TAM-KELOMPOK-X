<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#B5B7FF00"/>
            <gradient android:angle="-90" android:endColor="#00FFEA" android:startColor="#B7FF00"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#8600FFEA"/>
            <solid android:color="#66B7FF00"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#60B7FF00"/>
            <gradient android:angle="-90" android:endColor="#B7FF00" android:startColor="#00FFEA"/>
        </shape>
    </item>
</selector>